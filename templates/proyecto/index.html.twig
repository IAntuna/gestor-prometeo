{% extends 'base.html.twig' %}

{% block title %}Proyectos{% endblock %}

{% block body %}
    <h1 class="mb-4">Proyectos</h1>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripci√≥n</th>
                <th>Fecha de Inicio</th>
                <th>Fecha de Fin</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for proyecto in proyectos %}
            <tr>
                <td>{{ proyecto.id }}</td>
                <td>{{ proyecto.nombre }}</td>
                <td>{{ proyecto.descripcion }}</td>
                <td>{{ proyecto.fechaInicio ? proyecto.fechaInicio|date('Y-m-d') : '' }}</td>
                <td>{{ proyecto.fechaFin ? proyecto.fechaFin|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_proyecto_show', {'id': proyecto.id}) }}" class="btn btn-sm btn-primary">Ver</a>
                    <a href="{{ path('app_proyecto_edit', {'id': proyecto.id}) }}" class="btn btn-sm btn-secondary">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-center">No se encontraron registros.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_proyecto_new') }}" class="btn btn-success mt-3">Crear nuevo</a>
{% endblock %}

