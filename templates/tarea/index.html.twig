{% extends 'base.html.twig' %}

{% block title %}Tareas{% endblock %}

{% block body %}
    <h1 class="mb-4">Tareas</h1>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripci√≥n</th>
                <th>Estado</th>
                <th>Plazo</th>
                <th>Horas Estimadas</th>
                <th>Horas Realizadas</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for tarea in tareas %}
            <tr>
                <td>{{ tarea.id }}</td>
                <td>{{ tarea.nombre }}</td>
                <td>{{ tarea.descripcion }}</td>
                <td>{{ tarea.estado }}</td>
                <td>{{ tarea.plazo ? tarea.plazo|date('Y-m-d') : '' }}</td>
                <td>{{ tarea.horasEstimadas }}</td>
                <td>{{ tarea.horasRealizadas }}</td>
                <td>
                    <a href="{{ path('app_tarea_show', {'id': tarea.id}) }}" class="btn btn-sm btn-primary">Ver</a>
                    <a href="{{ path('app_tarea_edit', {'id': tarea.id}) }}" class="btn btn-sm btn-secondary">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8" class="text-center">No se encontraron tareas.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tarea_new') }}" class="btn btn-success mt-3">Crear nueva</a>
{% endblock %}

